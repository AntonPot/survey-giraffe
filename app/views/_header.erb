<header>
  <div class="logo">
    Giraffe
  </div>
  <% if current_user %>
    <div class='home-button'>
      <!-- <a class='signout' href="/session/delete">Sign Out</a> -->
      <form class='signout-form' action='/session/delete' method='post'>
      <input type="hidden" name="_method" value="delete">
        <input type="submit" value="Sign Out" class="signout">
      </form>
    </div>
  <% else %>
    <div class='home-button'>
      <a class='login' href="#">Login</a>
      <a class='signup' href="#">Sign Up</a>
    </div>
  <% end %>
</header>
